{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
        <tr>
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>

<a class="btn btn-primary" href="/articles/{{article.id}}/edit">Edit</a>
<!--POST, GET, UPDATE DELETE-->
<a class="btn btn-danger" href="/articles/{{article.id}}/delete">Delete</a>
<a class="btn btn-dark text-white" href="/articles">Go to Article List</a>
{{>layouts/footer}}
